		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@typescript-eslint/parser": "^7.6.0",
		"autoprefixer": "^10.0.1",
		"cz-git": "^1.9.1",
		"czg": "^1.9.1",
		"eslint": "^8",
		"eslint-config-next": "14.1.4",
		"eslint-plugin-tailwindcss": "^3.15.1",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
